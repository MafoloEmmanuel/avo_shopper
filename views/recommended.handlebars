<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avo Shopper</title>
    <link rel="stylesheet" href="style.css">

<script src="client.js"></script>

</head>

<body>
    <div class="container">

        <div class="buttons">
            <form action="/seeDeals" method="get">
                <button type="submit">Avo deals</button>

            </form>
            <form action="/listshops" method="get">
                <button type="submit"> Shops</button>

            </form>
        </div>
            <div class=" titleFive">
                <h2 class="">Top five avo deals</h2>

            </div>
            <div class="pictures">
                <div>
                    <img src="/img/avo.jpg" alt="">

                </div>
                <div>
                    <img src="/img/avo.jpg" alt="">

                </div> <div>
                    <img src="/img/avo.jpg" alt="">

                </div>
                
            </div>
            <div class="topFive">

                {{#each topFive}}

                <ul>
                    <li  >{{this.shop_name}}</li>
                    <p class="format"> {{this.qty}} for R{{this.price}}</p>

                </ul>

                {{/each}}
            </div>
        <form action="/" method="post">

            <button type="submit">Top five deals</button>
        </form>
        <form action="/recommended" method="post">
            <div>
                <h2>Recommended avo deals</h2>
                <label for="">Please enter the amount you have</label>
                <input type="text" value="{{amount}}" name="amount" id="">
                <button type="submit">Submit</button>
                <div class="topFive">
                    {{#each recommendDeals}}
                    <ul>
                        <li style="background-color: white;">{{this.name}}</li>
                        <p>Price: R{{this.price}}</p>
                        <p>Quantity: {{this.qty}}</p>
                        <p>Unit_price: R{{this.unit_price}}</p>

                    </ul>
                    {{/each}}
                </div>

            </div>
        </form>



    </div>


</body>

</html>